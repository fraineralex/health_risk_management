<odoo>
    <data>
        <!-- Form view of the wizard -->
        <record id="view_ars_export_wizard_form" model="ir.ui.view">
            <field name="name">ars.export.wizard.form</field>
            <field name="model">ars.export.wizard</field>
            <field name="arch" type="xml">
                <form string="Generar Reporte de ARS">
                    <footer>
                        <button name="create_report_xlsx" string="Generar XLSX" type="object" class="btn-success"/>
                        <button name="create_report_txt" string="Generar TXT" type="object" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
