<odoo>
    <data>
        <!-- Form view of the wizard -->
        <record id="view_ars_export_wizard_form" model="ir.ui.view">
            <field name="name">ars.export.wizard.form</field>
            <field name="model">ars.export.wizard</field>
            <field name="arch" type="xml">
                <form string="Generar Reporte de ARS">
                    <footer>
                        <button name="generate_reports" string="Generar Reporte" type="object" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                        <div style="float: right;">
                            <strong>
                                <label for="txt_binary" style="margin-bottom: 0px"/>
                            </strong>
                            <div class="o_row" name="txt_binary_div">
                                <field name="txt_binary" filename="txt_filename" readonly="1"/>
                                <field name="txt_filename" invisible="1"/>
                            </div>
                        </div>
                        <div style="float: right; margin-right: 20px">
                            <strong>
                                <label for="xls_binary" style="margin-bottom: 0px"/>
                            </strong>
                            <div class="o_row" name="xls_binary_div">
                                <field name="xls_binary" filename="xls_filename" readonly="1"/>
                                <field name="xls_filename" invisible="1"/>
                            </div>
                        </div>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
